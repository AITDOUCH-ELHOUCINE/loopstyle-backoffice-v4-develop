{
  "type": "object",
  "properties": {
    "type":{
      "type":"string",
      "enum": ["broadcast_notifications","admin_notification"]
    },
    "users":{
      "type":"array",
      "items": {
        "type": "string",
        "minLength": 24
      }
    },
    "title": {
      "type": "string",
      "minLength": 2,
      "maxLength": 65
    },
    "content": {
      "type": "string",
      "maxLength": 178
    }
  },
  
  "if": { "properties": { "type": { "enum": ["admin_notification"]} }},
  "then": {
    "properties": {
      "toUsers":{
        "minItems":1
      }
    },
    "required": ["type","users","title","content"]
  },
  "else": {"required": ["type","title","content"]},

  "additionalProperties": true
}
